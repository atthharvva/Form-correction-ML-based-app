<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuplogin2"
    android:background="#9c9c7c">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="68dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/signinbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="800dp"
        android:layout_marginEnd="159dp"
        android:backgroundTint="#9c9c7c"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/signupb"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="750dp"
        android:backgroundTint="#2c4c44"
        android:text="Sign Up for Free"
        android:textColor="#9c9c7c"
        android:textSize="18dp"
        app:cornerRadius="10dp" />

</RelativeLayout>
